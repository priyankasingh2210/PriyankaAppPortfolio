<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.priyanka.android.priyankaappportfolio.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:gravity="center"
        android:text="My Nanodegree Apps!"
        android:textSize="30sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#F08C35"
        android:gravity="center"
        android:minWidth="250dp"
        android:padding="8dp"
        android:text="Spotify Streamer"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:onClick="toastIt"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#F08C35"
        android:gravity="center"
        android:minWidth="250dp"
        android:padding="8dp"
        android:text="Scores App"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:onClick="toastIt"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#F08C35"
        android:gravity="center"
        android:minWidth="250dp"
        android:padding="8dp"
        android:text="Library App"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:onClick="toastIt"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#F08C35"
        android:gravity="center"
        android:minWidth="250dp"
        android:padding="8dp"
        android:text="Build It Bigger"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:onClick="toastIt"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#F08C35"
        android:gravity="center"
        android:minWidth="250dp"
        android:padding="8dp"
        android:text="XYZ Reader"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:onClick="toastIt"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#FF0000"
        android:gravity="center"
        android:minWidth="250dp"
        android:padding="8dp"
        android:text="Capston: My Own App"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:onClick="toastIt"/>
</LinearLayout>
